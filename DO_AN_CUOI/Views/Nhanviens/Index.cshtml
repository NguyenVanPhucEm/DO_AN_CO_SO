@model IEnumerable<DO_AN_CUOI.Models.Nhanvien>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p>Tên nhân viên</p>
            </th>
            <th>
                <p>Ngày Sinh</p>
            </th>
            <th>
                <p>Giới tính</p>
            </th>
            <th>
                <p>Số điện thoại liên lạc</p>
            </th>
            <th>
                <p>Địa chỉ</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tennv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaysinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gioitinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Manv">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Manv">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Manv">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
